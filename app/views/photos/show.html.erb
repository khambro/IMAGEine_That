<div class= "container">

  <%= link_to "Upload New Photo", "/new-photo" %>
  <%= button_to "Subscribe", send_subscribe_path, method: :post %>


  <div class="form-style-6">
    <% if current_user.photos.count > 0 %>
      <h2>What splendid photos, <%= current_user.name %>!</h2>
      <% @photos.each do |p| %>
        <div class="border">
        <% if p.user_id == current_user.id %>
          <div class= "box">
            <div class="photo">
              <%= link_to image_tag(p.image_file.url(:square)), "/photo/#{p.id}"  %>
            </div>
            <div class="description">
              <h3><%= p.description %></h3>
        </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <h2>Time to <%= link_to "upload", "/new-photo" %> some photos, <%= current_user.email %>!</h2>
    <% end %>
  </div>

</div>
